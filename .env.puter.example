# Puter Configuration (PUBLIC - NO SECRETS)
# These are safe to commit and expose in frontend code

# Puter App ID (get from https://puter.com/developers)
VITE_PUTER_APP_ID=your_puter_app_id_here

# Puter App Name (display name)
VITE_PUTER_APP_NAME=Pay Family

# Enable cloud backup to Puter Drive (optional)
VITE_ENABLE_PUTER_BACKUP=true

# Local encryption password (generate with crypto.getRandomValues)
# If not set, generates new one on first login
VITE_LOCAL_ENCRYPTION_KEY=

# GDPR & Privacy Settings
VITE_DATA_STORAGE_LOCATION=CLIENT_ONLY
VITE_GDPR_COMPLIANT=true
VITE_SERVER_STORES_DATA=false
